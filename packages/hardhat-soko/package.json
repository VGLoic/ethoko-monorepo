{
  "name": "@soko/hardhat-soko",
  "version": "0.1.0",
  "description": "Hardhat V3 plugin in order to interact with Soko, warehouse for smart contract compilation artifacts.",
  "author": "Lo√Øc Vincent-Genod",
  "homepage": "https://github.com/VGLoic/soko-monorepo",
  "bugs": {
    "url": "https://github.com/VGLoic/soko-monorepo/issues"
  },
  "keywords": [
    "web3",
    "ethereum",
    "smart contracts",
    "hardhat",
    "foundry",
    "plugin",
    "infrastructure"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write src/**/*.ts",
    "check-format": "prettier --check src/**/*.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@soko/core": "workspace:*",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "hardhat": "^3.x"
  },
  "devDependencies": {
    "@soko/eslint-config": "workspace:*",
    "@soko/typescript-config": "workspace:*",
    "@types/node": "^22.1.0",
    "eslint": "^9.39.1",
    "tsup": "^8.2.4",
    "typescript": "5.9.2"
  }
}
